<p id="notice"><%= notice %></p>

<h1>Listando os Tipos</h1>

<table>
  <thead>
    <tr>
      <th>Descrição</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kinds.each do |kind| %>
      <tr>
        <td><%= kind.description %></td>
        <td><%= link_to 'Mostrar', kind %></td>
        <td><%= link_to 'Editar', edit_kind_path(kind) %></td>
        <td><%= link_to 'Deletar', kind, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Tipo', new_kind_path %>
